{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strictNullChecks": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "sourceMap": true,
    "isolatedModules": true,
    "paths": {
        "@/*": ["src/*"],
        "@framework/*": ["CubismSdkForWeb/src/*"],
        "@motionsyncframework/*": ["CubismWebMotionSyncComponents/Framework/src/*"],
    }
  },
  "include": [
      "src/**/*.ts",
      "Core/**/*.ts",
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
