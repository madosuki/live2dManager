{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strictNullChecks": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "paths": {
        "@/*": ["src/*"],
        "@CubismWebFramework/*": ["CubismWebFramework/src/*"]
    }
  },
  "include": [
      "src/**/*.ts",
      "Core/**/*.ts",
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
